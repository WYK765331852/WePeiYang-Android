<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="@drawable/network_widget_frame_big"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_net_wifi"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15.7dp"
        android:layout_weight="1"
        android:alpha="1"
        android:src="@drawable/network_widget_wifi2" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.7dp"
        android:layout_toRightOf="@id/widget_net_wifi"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_net_wlan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_wlan_status"
            android:textColor="@color/widget_word"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/widget_net_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/widget_wifi_name"
            android:textColor="@color/widget_word"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/widget_net_wifi_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/widget_wifi_status"
            android:textColor="@color/widget_word"
            android:textSize="14dp"
             />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/widget_net_white_bc"
        android:layout_width="64dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:background="@drawable/network_widget_frame_small"
        android:orientation="horizontal">

        <Button
            android:id="@+id/widget_net_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="登录/注销"
            android:textColor="@color/widget_word"
            android:textSize="11.3sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/widget_net_white_bc"
        android:orientation="vertical">

        <Button
            android:id="@+id/widget_net_refresh"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_marginBottom="12.7dp"
            android:background="@drawable/network_widget_refresh" />

        <Button
            android:id="@+id/widget_net_set"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/network_widget_set" />
    </LinearLayout>

</RelativeLayout>