<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.twt.service.home.common.schedule.CourseBriefViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@{viewModel.cardColor}"
        tools:layout_width="100dp">

        <TextView
            tools:text="计算机软件技术基础2@45B305"
            android:text="@{viewModel.courseName}"
            android:padding="4dp"
            android:textColor="@{viewModel.textColor}"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>
</layout>
