<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.twt.service.network.command.WiFiConnectViewModel" />
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_wifi_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/net_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tjubackground"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/network_account_new_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/net_white"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_wifi_net2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.wlan}"
                        android:textColor="@color/net_main_word"
                        android:textSize="16dp"
                        tools:text="热点名称：tju" />

                    <TextView
                        android:id="@+id/item_wifi_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="已连接"
                        android:textColor="@color/net_main_word"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_wifi_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{viewModel.username}"
                    android:textColor="@color/net_main_word"
                    android:textSize="16dp"
                    android:visibility="gone"
                    tools:text="姓名：000" />

                <TextView
                    android:id="@+id/item_wifi_studentid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@{viewModel.studentId}"
                    android:textColor="@color/net_main_word"
                    android:textSize="16dp"
                    tools:text="学号：000" />

                <TextView
                    android:id="@+id/item_wifi_account2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{viewModel.onlineStatus}"
                    android:textColor="@color/net_main_word"
                    android:textSize="16dp"
                    android:visibility="gone"
                    tools:text="状态：" />

            </LinearLayout>

            <Button
                android:id="@+id/fragment_wifi_bt_unconnected"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/network_button_selector"
                android:text="注销"
                android:textColor="@color/net_white"
                android:textSize="14dp"
                app:clickCommand="@{viewModel.onLogoutCommand}" />
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>


</layout>