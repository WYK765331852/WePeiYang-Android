<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/course_back_detail"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/bike_background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/schedule_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp">

            <FrameLayout
                android:id="@+id/schedule_detail_shared_element"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:transitionName="@string/schedule_transition"
                android:background="@drawable/schedule_circle_24dp"/>

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/schedule_detail_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
