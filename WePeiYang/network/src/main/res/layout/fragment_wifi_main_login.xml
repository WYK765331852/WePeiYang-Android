<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.twt.service.network.command.WiFiLoginViewModel" />
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_wifi_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/net_background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/net_background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wifi_background"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/network_account_new_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/net_white"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/fragment_wifi_username"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint="请输入用户名"
                    android:maxLines="1"
                    android:paddingTop="16dp"
                    android:text="@={viewModel.username}"
                    android:textColorHint="@color/main_net_unselected"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fragment_wifi_password"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:text="@={viewModel.password}"
                    android:textColorHint="@color/main_net_unselected"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/fragment_wifi_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="@={viewModel.isChecked}"

                        />

                    <TextView
                        android:id="@+id/fragment_wifi_checktext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="记住登录状态"
                        android:textColor="@color/net_main_word"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/fragment_wifi_login_bt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/network_button_selector"
                android:text="登录"
                android:textColor="@color/net_white"
                android:textSize="14sp"
                bind:clickCommand="@{viewModel.onLoginCommand}" />

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</layout>